<%#
  # @param models          [Array(ASig)]
  # @param cssClass        [String]
  # @param fields_property [String]
%>

<%
   vars = { :cssClass => "",
            :fields_property => "fields",
            :models => [] }.merge!(locals)
%>

<% vars[:models].select{|m| !m.abstract?}.each do |m| %>
<div class="panel <%= cssClass %>">
  <div class="panel-heading"><h3 class="panel-title"><%= m.relative_name %></h3></div>
  <div class="panel-body">
    <ul class="list-group">
      <% m.meta.send(vars[:fields_property], false).each do |f| %>
        <li class="list-group-item">
          <span class="fname"><%= f.name %></span>: <span class="ftype"><%= f.type %></span>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>
